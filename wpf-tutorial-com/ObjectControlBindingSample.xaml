<Window x:Class="wpf_tutorial_com.ObjectControlBindingSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_tutorial_com"
        mc:Ignorable="d"
        Title="ObjectControlBindingSample" Height="200" Width="300">
    
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Right" Width="100" Margin="10,0,0,0">
            <Button x:Name="button_addUser" Content="Add User" Click="button_addUser_Click"/>
            <Button x:Name="button_editUser" Content="Edit User" Margin="0,5" Click="button_editUser_Click"/>
            <Button x:Name="button_deleteUser" Content="Delete User" Click="button_deleteUser_Click"/>
        </StackPanel>
        <ListBox x:Name="listBox_Names" DisplayMemberPath="Name"/>
    </DockPanel>
    
</Window>
